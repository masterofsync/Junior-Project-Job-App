@model List<WcfAESJobs.Client.WebService.QuestionForm>

@{
    ViewBag.Title = "AddQuestionToJobByForm";
}

<div class="curveunderheader"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Add Question to Job</div>
<br />


@using (Html.BeginForm(new { Job_ID = ViewBag.Job_ID }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-sm-12">

            @for (var i = 0; i < Model.Count; i++)
            {
                <p>
                    @Html.HiddenFor(x => x[i].question.QuestionID)
                    @Html.CheckBoxFor(x => x[i].checkedQuestion)
                    &nbsp; &nbsp;
                    @Html.DisplayFor(x => x[i].question.QuestionTitle)
                </p>
                
            }

        </div>

        <div class="form-group col-sm-12">
            <div>
                <input type="submit" value="Save Changes" class="btn btn-default"/>&nbsp;
           @*The Following button needs to change. Need to figure out how to cancel changes.*@
                <form><input class="btn btn-default"  type="button" value="Back" onclick="history.go(-1);return true;"></form>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
