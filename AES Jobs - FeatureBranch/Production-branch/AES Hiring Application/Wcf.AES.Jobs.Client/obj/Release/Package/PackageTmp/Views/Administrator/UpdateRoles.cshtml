@model List<WcfAESJobs.Client.UserService.RoleForm>

@{
    ViewBag.Title = "UpdateRoles";
}

<div class="curveunderheader"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Update User Roles</div>
<div class="col-sm-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                @for (var i = 0; i < Model.Count; i++)
                {
                    <p>
                        @Html.HiddenFor(x => x[i].role.ID)
                        @Html.CheckBoxFor(x => x[i].ischecked)
                        &nbsp; &nbsp;
                        @Html.DisplayFor(x => x[i].role.Title)
                    </p>

                }
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }
</div>
    <div>
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
    </div>
