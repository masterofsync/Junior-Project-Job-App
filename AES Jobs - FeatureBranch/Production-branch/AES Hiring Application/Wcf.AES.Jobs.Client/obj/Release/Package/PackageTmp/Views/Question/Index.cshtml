@model WcfAESJobs.Client.Models.QuestionView

@{
    ViewBag.Title = "Index";
}
<style>
     a {
        text-decoration: none;
    }

    .panel-heading span {
        margin-top: -20px;
        font-size: 15px;
    }

    .row {
        margin-top: 0px;
        padding: 0 10px;
    }

    .clickable {
        cursor: pointer;
    }
</style>
<div class="curveunderheader"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Questions</div>
<br />

<div class="row"><div class="col-md-12">@Html.ActionLink("Create New Question", "Create", null, new { @class = "btn btn-default" })</div></div>
 <br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading clickable">
                <h3 class="panel-title"><b>Job Application Questions</b></h3>
                <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
            </div>
            <div class="panel-body">

                <table class="table table-striped">
                    <tr>
                        <th>
                            Question Title
                        </th>
                        <th>
                            Full Question
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.ApplicationQuestions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuestionTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullQuestion)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.QuestionID }, new { @class = "btn btn-default btn-sm" }) &nbsp;
                                @Html.ActionLink("Delete", "Delete", new { id = item.QuestionID }, new { @class = "btn btn-default btn-sm" })
                            </td>
                        </tr>
                    }


                </table>

            </div>
        </div>
    </div>
</div>
