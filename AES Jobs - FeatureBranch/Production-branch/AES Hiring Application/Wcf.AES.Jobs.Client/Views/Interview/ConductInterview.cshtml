@model WcfAESJobs.Client.Models.InterviewModel

@{
    ViewBag.Title = "ConductInterview";
}


<style>
    textarea {
        resize: none;
    }
     

</style>
<div class="curveunderheader"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Conduct Interview</div>
<br />
<div>
    @Html.Partial("_InterviewDetails", Model)
</div>
<p class="text-success">@ViewBag.StatusMessage</p>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
        <div class="form-group col-md-12">
            <tr>
                <td>
                    <b>Interviewer Comment</b>
                </td>
                <td>
                    @Html.HiddenFor(m => Model.InterviewComment.questionID)
                    @Html.HiddenFor(m => Model.JobApplication.ID)
                    @Html.TextAreaFor(m => Model.InterviewComment.answer, new { @class = "form-control", @required = "required", rows = "5", cols="20", maxlength = "100" })
                </td>
            </tr>
        </div>
            <div class="form-group col-sm-12">
                <div>
                    <input type="submit" value="Submit Comment" class="btn btn-default" />
                </div>
            </div>
    </div>
    </div>
    

   
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>