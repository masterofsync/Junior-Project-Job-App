@model WcfAESJobs.Client.Models.OpenJobsModel

@{
    ViewBag.Title = "Show Details";
}



<div class="col-sm-12" style="background-color:white" >
    <h2 style="color:cadetblue">@Model.JobTitle</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Job Title
        </dt>
       
        <dd>
            @Html.DisplayFor(model => model.JobTitle)<br /> <br />
        </dd>

        <dt>
            City
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobLocationCity)<br /> <br />
        </dd>
        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobLocation)<br /> <br />
        </dd>
        <dt>
            Close Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CloseDate)<br /> <br />
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobDescription)<br /> <br />
        </dd>
        <dt>
            Qualifications
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobQualification)<br /> <br />
        </dd>
        <dd>@Html.ActionLink("Apply", "Apply", "Application", new { PID = Model.PostingId }, new { @class = "btn btn-default" })&nbsp;
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button></dd>
    </dl>
</div>
